{
  "expo": {
    "name": "HomeEdge AI",
    "slug": "openhouse-ai",
    "owner": "devmoeee",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "homeedgeai",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "org.homeedgeai.app",
      "buildNumber": "26",
      "infoPlist": {
        "NSCameraUsageDescription": "HomeEdge AI uses the camera and LiDAR for room scanning and depth capture.",
        "NSMicrophoneUsageDescription": "Used for ARKit scanning and depth processing.",
        "NSPhotoLibraryAddUsageDescription": "Allows saving generated 3D floor plans to your photo library.",
        "NSLocationWhenInUseUsageDescription": "Used for AR alignment during room scanning.",
        "NSMotionUsageDescription": "Used to track device motion during AR scanning.",
        "UIBackgroundModes": ["audio"],
        "ARKit": true,
        "ITSAppUsesNonExemptEncryption": false
      },
      "infoPlistStrings": {
        "ARKitUnavailableMessage": "Your device does not support ARKit scanning."
      },
      "entitlements": {
        "com.apple.developer.arkit": true
      }
    },
    "android": {
      "package": "org.homeedgeai.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-camera",
      "expo-sensors",
      "expo-av",
      "expo-file-system",
      "expo-media-library",
      "expo-font",
      "expo-router",
      "expo-asset",
      "expo-secure-store",
      "expo-screen-orientation",
      "expo-dev-client",
      "./plugins/with-depth-capture.js"
    ],
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 0
    },
    "extra": {
      "API_BASE": "http://192.168.0.14:8000",
      "env": "development",
      "eas": {
        "projectId": "e0f3c9f6-6502-4892-97f4-78fdcc31ed99"
      }
    }
  }
}
