{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],               // ðŸ‘ˆ add this line
      "@app/*": ["app/*"],
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@src/*": ["src/*"],
      "@lib/*": ["lib/*"],
      "@hooks/*": ["hooks/*"]     // ðŸ‘ˆ optional, but helps with hooks autocomplete
    },
    "jsx": "react-native",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
