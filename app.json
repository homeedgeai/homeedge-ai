{
  "expo": {
    "name": "OpenHouse AI",
    "slug": "openhouse-ai",
    "owner": "homeedge1.0.1", 
    "version": "1.0.0",
    "scheme": "openhouseai",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "assetBundlePatterns": ["**/*"],

    "ios": {
      "bundleIdentifier": "org.openhouseai.app",
      "supportsTablet": false,
      "buildNumber": "87",
      "deploymentTarget": "15.1",
      "infoPlist": {
        "NSCameraUsageDescription": "OpenHouse AI requires Camera and LiDAR for scanning.",
        "NSMicrophoneUsageDescription": "Microphone may be used while scanning.",
        "NSLocationWhenInUseUsageDescription": "Location helps attach scans to accurate property listings.",
        "ITSAppUsesNonExemptEncryption": false,
        "UIFileSharingEnabled": true,
        "LSSupportsOpeningDocumentsInPlace": true
      }
    },

    "android": {
      "permissions": ["android.permission.CAMERA"],
      "package": "org.openhouseai.app"
    },

    "plugins": [
      "expo-router",
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "OpenHouse AI requires Camera and LiDAR for scanning.",
          "microphonePermissionText": "Microphone may be used while scanning."
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "extraPods": [
              { "name": "GoogleUtilities", "modular_headers": true },
              { "name": "FirebaseCoreInternal", "modular_headers": true },
              { "name": "FirebaseCore", "modular_headers": true }
            ]
          }
        }
      ]
    ],

    "extra": {
      "env": "development",
      "API_BASE": "http://192.168.0.14:8000",
      "router": {},
      "eas": {
        "projectId": "bf663651-34ed-4413-90ae-5e164f3636c7"
      }
    },

    "experiments": { "typedRoutes": true }
  }
}
