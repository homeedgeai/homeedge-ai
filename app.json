{
  "expo": {
    "name": "heaidev",
    "slug": "homeedgeai",
    "owner": "heaidev",
    "scheme": "homeedgeai",
    "version": "20",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "org.homeedgeai.app2",
      "buildNumber": "23",
      "infoPlist": {
        "NSCameraUsageDescription": "HomeEdge AI uses the camera to scan rooms and create 3D floor plans.",
        "NSMicrophoneUsageDescription": "HomeEdge AI uses the microphone for video and audio capture.",
        "NSPhotoLibraryAddUsageDescription": "Save captured images and floor plans to your library.",
        "NSPhotoLibraryUsageDescription": "Select images for property listings and projects.",
        "NSLocationWhenInUseUsageDescription": "Enhance floor plan accuracy with location data.",
        "NSMotionUsageDescription": "Used for real-time 3D scanning and motion tracking.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "org.homeedgeai.app2",
      "versionCode": 2,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "HomeEdge AI needs access to your photo library to allow you to choose images."
        }
      ],
      "expo-sensors",
      "expo-camera",
      "expo-av",
      "expo-media-library",
      "expo-font",
      "expo-router",
      "expo-asset",
      "expo-secure-store",
      "expo-location",
      "expo-file-system"
    ],
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "extra": {
      "API_BASE": "http://192.168.1.178:5000",
      "env": "production",
      "eas": {
        "projectId": "ff4ef1fc-383f-40c9-b011-bd86818d11f6"
      }
    }
  }
}