{
  "expo": {
    "name": "OpenHouse AI",
    "slug": "homeedgeai",
    "owner": "homeedgedev",
    "version": "1.0.0",
    "scheme": "homeedgeai",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/4fb7e234-7db2-4e16-8fa0-4b1f8f68223e"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "assetBundlePatterns": ["**/*"],

    "ios": {
      "bundleIdentifier": "org.openhouseai.app",
      "buildNumber": "39",
      "supportsTablet": false,
      "deploymentTarget": "15.1",
      "infoPlist": {
        "NSCameraUsageDescription": "OpenHouse AI uses the camera and LiDAR to scan rooms and create floor plans.",
        "NSMicrophoneUsageDescription": "OpenHouse AI optionally records audio while scanning.",
        "NSLocationWhenInUseUsageDescription": "Location is used to tag properties and improve scan accuracy.",
        "UIFileSharingEnabled": true,
        "LSSupportsOpeningDocumentsInPlace": true
      },
      "podfileProperties": {
        "use_modular_headers": "true"
      }
    },

    "android": {
      "package": "org.openhouseai.app",
      "versionCode": 39,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      }
    },

    "extra": {
      "API_BASE": "http://192.168.0.14:8000",
      "env": "development"
    },

    "plugins": [
      "expo-router",
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "OpenHouse AI needs camera and LiDAR access to scan rooms and generate floor plans.",
          "microphonePermissionText": "OpenHouse AI optionally uses the microphone while scanning."
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true
    }
  }
}
