{
  "expo": {
    "name": "HomeEdge AI",
    "slug": "openhouse-ai",
    "owner": "homeedgeai",
    "version": "1.0.0",
    "orientation": peasant",
    "icon": "./assets/icon.png",
    "scheme": "homeedgeai",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": ["**/*"],

    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "org.homeedgeai.app",
      "buildNumber": "29",
      "infoPlist": {
        "NSCameraUsageDescription": "HomeEdge AI uses the camera and LiDAR to scan rooms and capture depth data for 3D floor plans.",
        "NSMicrophoneUsageDescription": "Used for ARKit ambient audio processing during scanning.",
        "NSPhotoLibraryAddUsageDescription": "Save generated 3D floor plans and scans to your photo library.",
        "NSLocationWhenInUseUsageDescription": "Used for AR world alignment and stable tracking during room scanning.",
        "NSMotionUsageDescription": "Tracks device motion for accurate AR depth capture and LiDAR alignment.",
        "UIBackgroundModes": ["audio"],
        "ARKitUnavailableMessage": "Your device does not support ARKit scanning.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "entitlements": {
        "com.apple.developer.arkit": true
      }
    },

    "android": {
      "package": "org.homeedgeai.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.INTERNET"
      ]
    },

    "web": {
      "favicon": "./assets/favicon.png"
    },

    "plugins": [
      "expo-camera",
      "expo-sensors",
      "expo-av",
      "expo-file-system",
      "expo-media-library",
      "expo-font",
      "expo-router",
      "expo-asset",
      "expo-secure-store",
      "expo-screen-orientation",
      "expo-dev-client",
      "./plugins/with-depth-capture.js"
    ],

    "runtimeVersion": {
      "policy": "appVersion"
    },

    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 0
    },

    "extra": {
      "API_BASE": "http://192.168.0.14:8000",
      "env": "development",
      "eas": {
        "projectId": "d4584ebc-2f95-4fd4-8317-3ade2b9b0d33"
      }
    }
  }
}