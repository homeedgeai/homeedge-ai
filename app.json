{
  "expo": {
    "name": "HomeEdgeAI",
    "slug": "homeedgeai",
    "version": "1.0.10",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "homeedgeai",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "org.homeedgeai.app2",
      "buildNumber": "19",
      "infoPlist": {
        "NSCameraUsageDescription": "HomeEdgeAI requires access to your camera to scan rooms and generate floor plans.",
        "NSMicrophoneUsageDescription": "HomeEdgeAI uses the microphone while recording video during room scans.",
        "NSPhotoLibraryAddUsageDescription": "HomeEdgeAI needs access to your photo library to save scanned recordings.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "org.homeedgeai.app2",
      "versionCode": 18,
      "permissions": [
        "CAMERA",
        "INTERNET",
        "RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },

    "web": { "favicon": "./assets/favicon.png" },

    "runtimeVersion": { "policy": "sdkVersion" },

    "platforms": ["ios", "android", "web"],

    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow HomeEdgeAI to use your camera for scanning floor plans."
        }
      ],
      "expo-font",
      "expo-updates"
    ],

    "updates": {
      "url": "https://u.expo.dev/"
    },

    "extra": {
      "router": {}
      /* IMPORTANT: we intentionally removed
         "eas": { "projectId": "..." }
         so we can re-link to your NEW Expo account */
    }
  }
}
