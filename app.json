{
  "expo": {
    "name": "openhouse-ai",
    "slug": "openhouse-ai",
    "owner": "devmoeee",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "homeedgeai",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "org.openhouseai.app",
      "buildNumber": "24",
      "infoPlist": {
        "NSCameraUsageDescription": "OpenHouse AI uses the camera to scan rooms and create 3D floor plans.",
        "NSMicrophoneUsageDescription": "OpenHouse AI uses the microphone for video and audio capture.",
        "NSPhotoLibraryAddUsageDescription": "Save captured images and floor plans to your library.",
        "NSPhotoLibraryUsageDescription": "Select images for property listings and projects.",
        "NSLocationWhenInUseUsageDescription": "Enhance floor plan accuracy with location data.",
        "NSMotionUsageDescription": "Used for real-time 3D scanning and motion tracking.",
        "UIBackgroundModes": [
          "audio"
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "org.openhouseai.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "OpenHouse AI needs access to your photo library to allow you to choose images."
        }
      ],
      "expo-sensors",
      "expo-camera",
      "expo-av",
      "expo-media-library",
      "expo-font",
      "expo-router",
      "expo-asset",
      "expo-secure-store",
      "expo-location",
      "expo-file-system",
      "expo-screen-orientation",
      "expo-dev-client"
    ],
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 0
    },
    "extra": {
      "API_BASE": "http://192.168.0.14:8000",
      "env": "development",
      "eas": {
        "projectId": "e0f3c9f6-6502-4892-97f4-78fdcc31ed99"
      }
    }
  }
}
