{
  "cli": { "version": ">= 3.13.0" },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "node": "18.18.0",
      "ios": {
        "simulator": false,
        "image": "latest",
        "buildConfiguration": "Debug",
        "autoIncrement": false
      },
      "android": { "buildType": "apk" },
      "env": {
        "EXPO_USE_DEV_SERVER": "true",
        "EXPO_PUBLIC_BACKEND_URL": "http://192.168.0.9:8000"
      },
      "cache": { "disabled": true }
    },
    "production": {
      "distribution": "store",
      "node": "18.18.0",
      "ios": {
        "simulator": false,
        "image": "latest",
        "autoIncrement": "buildNumber"
      },
      "env": {
        "EXPO_USE_DEV_SERVER": "false",
        "NODE_OPTIONS": "--max-old-space-size=4096",
        "EXPO_PUBLIC_BACKEND_URL": "https://api.homeedgeai.com"
      },
      "cache": { "disabled": false }
    },
    "preview": {
      "distribution": "internal",
      "ios": { "simulator": false, "image": "latest" },
      "env": {
        "EXPO_USE_DEV_SERVER": "true",
        "EXPO_PUBLIC_BACKEND_URL": "http://armonmoore.local:8000"
      },
      "cache": { "disabled": true }
    },
    "internal": {
      "distribution": "internal",
      "node": "18.18.0",
      "ios": { "simulator": false, "image": "latest", "autoIncrement": "buildNumber" },
      "android": { "buildType": "apk" },
      "env": {
        "EXPO_USE_DEV_SERVER": "false",
        "EXPO_PUBLIC_BACKEND_URL": "https://api.homeedgeai.com"
      },
      "cache": { "disabled": false }
    }
  }
  /* NOTE: I removed the "submit" section that hard-coded your old Apple ID/Team.
     Weâ€™ll set that up again after the new EAS project is linked. */
}
